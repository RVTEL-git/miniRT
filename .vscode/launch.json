{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug miniRT (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/miniRT",
      "args": [
        "scene/valid_scene.rt"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "build: make",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Activer pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "DÃ©sactiver pagination pour la sortie GDB",
          "text": "set pagination off",
          "ignoreFailures": true
        }
      ],
      "logging": {
        "moduleLoad": false,
        "trace": false,
        "engineLogging": false
      }
    }
  ]
}